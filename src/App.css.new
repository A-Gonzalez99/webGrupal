.main-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-left: 10%;
  padding-right: 10%;
}

@media screen and (max-width: 768px) {
  .main-content {
    padding-left: 24px;
    padding-right: 24px;
  }
  .only-mobile {
    display: inline-block;
  }
  .not-mobile {
    display: none;
  }
}
